<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (keep this!) -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Your existing theme customizations -->
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />

    <!-- ADD THESE NEW STYLES FOR BUTTONS -->
    <style name="CalcButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/calcButtonTextSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalcButton.Operator" parent="CalcButton">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>